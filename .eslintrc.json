{
    "env": { 
        "browser": true,
        "es2021": true 
    },
    "extends": [ 
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12, 
        "sourceType": "module" 
    },
    "plugins": ["react", "prettier", "only-warn"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"printWidth": 100,
				"semi": false
			}
		],
		"no-unused-vars": "off",
		"react/prop-types": 0,
		"react/display-name": 0
	}
}
 